<script type="text/ng-template" id="loanCompanyRegist.html">

	<div class="modal-header">
		<button type="button" class="close" ng-click="$dismiss()" aria-hidden="true">×</button>
		<h4>新規出向先登録</h4>
	</div>

	<form class="form-horizontal" name="loanCompanyInfo" role="form">
		<div class="modal-body">

			<div class="form-group">
				<label class="col-sm-3 control-label">出向先名</label>
				<div class="col-sm-9">
					<input type="text"
	      				class="form-control"
	      				ng-model="loanCompanyData.name"
	      				placeholder="出向先名"
	      				required>
				</div>
			</div>

			<div ng-show="isRegisteredName(loanCompanyData.name)"
				 class="col-sm-12 alert alert-danger">
				 {{loanCompanyData.name}}は登録済みです!
			</div>

			<div class="form-group">
				<label class="col-sm-3 control-label">出向先住所</label>
				<div class="col-sm-9">
					<input type="text"
	      				class="form-control"
	      				ng-model="loanCompanyData.address"
	      				placeholder="出向先住所"
	      				required>
				</div>
			</div>

			<div ng-show="isRegisteredAddress(loanCompanyData.address)"
				 class="col-sm-12 alert alert-danger">
				 {{loanCompanyData.address}}は登録済みです!
			</div>

		</div>

		<div class="modal-footer">
			<button class="btn btn-success"
					ng-click="create()"
					ng-disabled="loanCompanyInfo.$invalid ||
								 isRegisteredName(loanCompanyData.name) ||
								 isRegisteredAddress(loanCompanyData.address)">
						登録
					</button>
			<button class="btn btn-danger" ng-click="$close()">キャンセル</button>
		</div>
	</form>

</script>