<script type="text/ng-template" id="eventCreate.html">
	<div class="modal-header">
		<button type="button" class="close" ng-click="$dismiss()" aria-hidden="true">×</button>
		<h4>イベント登録</h4>
	</div>

	<form class="form-horizontal" name="eventInfo" role="form">
		<div class="modal-body">
			<div class="form-group">
				<label class="col-sm-3 control-label">イベント名</label>
				<div class="col-sm-9">
	      			<input type="text"
	      				class="form-control"
	      				ng-model="newEvent.name"
	      				placeholder="イベント名"
	      				required>
	    		</div>
			</div>

			<div class="form-group">
				<label class="col-sm-3 control-label">イベント内容</label>
				<div class="col-sm-9">
	      			<input type="text"
	      				class="form-control"
	      				ng-model="newEvent.description"
	      				placeholder="イベント内容"
	      				required>
	    		</div>
			</div>

			<div class="form-group">
				<label class="col-sm-3 control-label">場所</label>
				<div class="col-sm-9">
	      			<input type="text"
	      				class="form-control"
	      				ng-model="newEvent.location"
	      				placeholder="場所"
	      				required>
	    		</div>
			</div>

			<div class="form-group">
				<label class="col-sm-3 control-label">開催日</label>
				<div class="col-sm-9">
					<div>
						{{newEvent.start | date:'yyyy-MM-dd'}}
					</div>
					<div ng-model="newEvent.start">
					<timepicker ng-model="newEvent.start"></timepicker>
	    		</div>
			</div>

		</div>

		<div class="modal-footer">
			<button class="btn btn-success" ng-click="create()" ng-disabled="eventInfo.$invalid">登録</button>
			<button class="btn btn-danger" ng-click="$close()">キャンセル</button>
		</div>
	</form>

</script>
